<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardMaxElevation="4dp"
    tools:ignore="HardcodedText"
    tools:context=".RecyclerViewActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    tools:ignore="UselessLeaf">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/head_portrait"
        android:src="@drawable/ic_cute"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tv_name"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="走你小助手"
        android:textColor="#292828"
        android:textSize="22sp"
        android:layout_toRightOf="@id/head_portrait"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="今日趣事"
        android:textSize="20sp"
        android:textColor="#EA0000"
        android:layout_below="@id/head_portrait"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_main_body"
        android:layout_below="@id/tv_title"
        android:text="全新的一天，从走你小秘开始······"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_update"
        android:layout_below="@id/tv_main_body"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="更新时间：2018-12-20 15:48"
        android:textSize="11dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/tv_hhhh"
        android:layout_below="@id/tv_update"
        android:layout_margin="5dp"
        android:background="#6d8e8b8b" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rec_status_list"
        android:layout_below="@id/tv_hhhh">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
</android.support.v7.widget.CardView>